<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mwz_place_info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mwz_place_info_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_location_on_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/mwz_place_info_subtitle"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mwz_place_info_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:lines="1"
            android:maxLines="1"
            app:layout_constraintTop_toTopOf="@+id/mwz_place_info_image_view"
            app:layout_constraintStart_toEndOf="@+id/mwz_place_info_image_view"
            app:layout_constraintBottom_toBottomOf="@+id/mwz_place_info_image_view"
            app:layout_constraintEnd_toStartOf="@+id/mwz_place_info_close_details"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/mwz_place_info_close_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_expand_more_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/mwz_place_info_subtitle"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/mwz_place_info_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/mwz_place_info_details_webview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mwz_place_info_image_view" />

        <WebView
            android:id="@+id/mwz_place_info_details_webview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:minHeight="48dp"
            app:layout_constraintHeight_min="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mwz_place_info_subtitle"
            app:layout_constraintBottom_toTopOf="@+id/mwz_place_info_direction_button"/>

        <include layout="@layout/mapwize_direction_button"
            android:id="@+id/mwz_place_info_direction_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_goneMarginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mwz_place_info_details_webview"
            app:layout_constraintBottom_toBottomOf="parent" />

        <include layout="@layout/mapwize_information_button"
            android:id="@+id/mwz_place_info_information_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_goneMarginTop="0dp"
            app:layout_constraintStart_toEndOf="@+id/mwz_place_info_direction_button"
            app:layout_constraintTop_toBottomOf="@+id/mwz_place_info_details_webview"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ProgressBar
            android:id="@+id/mwz_place_info_loader"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="@+id/mwz_place_info_details_webview"
            app:layout_constraintEnd_toEndOf="@+id/mwz_place_info_details_webview"
            app:layout_constraintBottom_toBottomOf="@+id/mwz_place_info_direction_button"
            app:layout_constraintTop_toTopOf="@+id/mwz_place_info_direction_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>