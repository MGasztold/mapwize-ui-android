<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <io.mapwize.mapwizeui.refacto.SearchBarPlaceholder
        android:id="@+id/mwz_search_bar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/mapwize_ui_padding_top"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp"/>

    <ProgressBar
        android:id="@+id/mwz_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mwz_search_bar_placeholder"
        android:indeterminate="true"
        android:visibility="invisible"/>

    <io.mapwize.mapwizeui.CompassView
        android:id="@+id/mwz_compass_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="22dp"
        android:elevation="6dp"
        android:src="@drawable/mapwize_compass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mwz_search_bar_placeholder"
        app:layout_goneMarginEnd="16dp"
        android:visibility="gone"/>

    <io.mapwize.mapwizeui.FloorControllerView
        android:id="@+id/mwz_floor_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="22dp"
        android:maxHeight="0dp"
        app:layout_constraintHeight_max="0dp"
        app:layout_constrainedHeight="true"
        app:layout_goneMarginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/mwz_follow_user_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mwz_compass_view"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <io.mapwize.mapwizeui.FollowUserButton
        android:id="@+id/mwz_follow_user_button"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toTopOf="@id/mwz_bottom_card_view"
        app:layout_constraintEnd_toEndOf="parent"/>

    <io.mapwize.mapwizeui.LanguagesButton
        android:id="@+id/mwz_language_button"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:elevation="6dp"
        android:src="@drawable/ic_language_black_24dp"
        android:background="@drawable/mapwize_circle_view"
        app:layout_constraintBottom_toTopOf="@+id/mwz_bottom_card_view"
        app:layout_constraintStart_toStartOf="parent"/>

    <io.mapwize.mapwizeui.UniversesButton
        android:id="@+id/mwz_universe_button"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        app:layout_goneMarginStart="16dp"
        android:elevation="6dp"
        android:src="@drawable/ic_apps_black_24dp"
        android:background="@drawable/mapwize_circle_view"
        app:layout_constraintBottom_toTopOf="@+id/mwz_bottom_card_view"
        app:layout_constraintStart_toEndOf="@+id/mwz_language_button"/>

    <io.mapwize.mapwizeui.refacto.PlaceInfoView
        android:id="@+id/mwz_bottom_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="4dp"
        android:translationZ="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:clickable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>