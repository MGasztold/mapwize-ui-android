                    android:layout_height="25dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/mapwize_details_border_background"
                    android:padding="2dp"
                    android:text="5h" />

                <TextView
                    android:layout_width="26dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/mapwize_details_border_background"
                    android:padding="2dp"
                    android:text="6h" />

                <TextView
                    android:layout_width="26dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/mapwize_details_border_background"
